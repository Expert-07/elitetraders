    <h2 class="plan">Choose an Investment Plan</h2>
    <form action="/invest" method="post">
        <select name="plan" required>
            <option value="" class="plan-option">--Select a Plan--</option>
            <option value="basic">Basic - min: $100 max: $499 - 10% in 7 days</option>
            <option value="silver">Silver - min: $500  max: $4999</option>
            <option value="gold">Gold - min: 5000  max: 24999 - 25% in 30 days</option>
            <br><br>
        </select>
<div>
        <label>Enter amount:   </label>
</div>
<div class="buttons">
        <input type="number" name="amount" required /><br><br>
        <button type="submit" class="invest">Invest Now</button>
        </div>
    </form>

    <table>
  <tr>
    <th>Plan</th>
    <th>Amount</th>
    <th>ROI</th>
    <th>Start Date</th>
    <th>Status</th>
  </tr>
  <% investmentsResult.forEach(inv => { %>
    <tr>
      <td><%= inv.plan %></td>
      <td>â‚¦<%= inv.amount %></td>
      <td><%= inv.roi %>% over <%= inv.duration %> days</td>
      <td><%= new Date(inv.start_date).toLocaleDateString() %></td>
      <td>
        <% if (inv.status === 'pending') { %>
          <span style="color: orange;">Pending</span>
        <% } else if (inv.status === 'confirmed') { %>
          <span style="color: green;">Confirmed</span>
        <% } else { %>
          <span><%= inv.status %></span>
        <% } %>
      </td>
    </tr>
  <% }) %>
</table>

